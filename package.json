{
  "name": "buddy",
  "description": "A fast, simple build tool for web projects.",
  "version": "6.0.0-beta",
  "author": "popeindustries <alex@pope-industries.com>",
  "keywords": [
    "build",
    "buildtool",
    "bundle",
    "bundler",
    "modules",
    "javascript",
    "js",
    "css",
    "html"
  ],
  "dependencies": {
    "async": "2.0.1",
    "autoprefixer": "6.5.1",
    "babel-core": "6.17.0",
    "babel-plugin-external-helpers": "6.8.0",
    "browserslist": "1.4.0",
    "buddy-cli": "6.0.3-beta",
    "chalk": "1.1.3",
    "cssnano": "3.7.7",
    "glob": "7.1.1",
    "inline-source": "5.1.1",
    "lodash": "4.16.4",
    "md5": "2.2.1",
    "minimatch": "3.0.3",
    "portscanner": "1.0.0",
    "postcss": "5.2.4",
    "recur-fs": "2.2.3",
    "uglify-js": "2.7.3",
    "yaw": "1.0.1"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-classes": "6.14.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.16.0",
    "babel-plugin-transform-es2015-parameters": "6.17.0",
    "expect.js": "*",
    "mocha": "*",
    "rimraf": "*"
  },
  "main": "lib/buddy.js",
  "bin": {
    "buddy": "node ./bin/buddy"
  },
  "scripts": {
    "install:packages": "./bin/install",
    "dl": "node ./bin/dl",
    "test:all": "NODE_ENV=test mocha \"./packages/buddy-*/test/test.js\" \"./test/*-test.js\" --reporter spec --timeout 20000 --bail",
    "test": "NODE_ENV=test mocha \"./test/*-test.js\" --reporter spec --timeout 20000 --bail",
    "test:windows": "set NODE_ENV=test&&node.exe ./node_modules/mocha/bin/mocha --reporter spec -t 20000 --bail"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": "git://github.com/popeindustries/buddy.git",
  "readmeFilename": "README.md",
  "license": "MIT"
}
